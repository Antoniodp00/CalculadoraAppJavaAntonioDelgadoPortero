<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="horizontal"
    android:padding="8dp"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Columna Izquierda: Entradas, Selector y Resultado -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <EditText
            android:id="@+id/entradaNumero1"
            style="@style/CalculatorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_first_number"
            android:inputType="numberDecimal|numberSigned" />

        <EditText
            android:id="@+id/entradaNumero2"
            style="@style/CalculatorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/enter_second_number"
            android:inputType="numberDecimal|numberSigned" />



        <EditText
            android:id="@+id/campoResultado"
            style="@style/CalculatorEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="top"
            android:hint="@string/result"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!-- Columna Derecha: Opciones de Cálculo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/grupoTipoCalculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radioBotonUnico"
                    style="@style/CalculatorSelectionControl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/single_calculation" />

                <RadioButton
                    android:id="@+id/radioBotonMultiple"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/CalculatorSelectionControl"
                    android:layout_height="wrap_content"
                    android:text="@string/multiple_calculations"/>
            </RadioGroup>
            <!-- Tarjeta para Cálculo Único -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tarjetaCalculoUnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioGroup
                        android:id="@+id/grupoRadioOperaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioBotonSuma"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add" />

                        <RadioButton
                            android:id="@+id/radioBotonResta"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subtract" />

                        <RadioButton
                            android:id="@+id/radioBotonMultiplicacion"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/multiply" />

                        <RadioButton
                            android:id="@+id/radioBotonDivision"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/divide" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/botonCalcular1"
                        style="@style/CalculatorButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/calculate" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta para Cálculos Múltiples -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tarjetaCalculoMultiple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/casillaSuma"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add" />

                        <CheckBox
                            android:id="@+id/casillaResta"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subtract" />

                        <CheckBox
                            android:id="@+id/casillaMultiplicacion"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/multiply" />

                        <CheckBox
                            android:id="@+id/casillaDivision"
                            style="@style/CalculatorSelectionControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/divide" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/botonCalcular2"
                        style="@style/CalculatorButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/calculate" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
