<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicación. -->
    <style name="Theme.CalculadorAppADP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Paleta de colores principal -->
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/card_background</item>
        <item name="colorOnPrimary">@color/button_text_color</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <!-- Estilo para los EditText -->
    <style name="CalculatorEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo para los botones principales -->
    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para los RadioButton y CheckBox -->
    <style name="CalculatorSelectionControl" parent="">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilo para los títulos de las secciones -->
    <style name="SectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
